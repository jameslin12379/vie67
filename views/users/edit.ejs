                    <a class="nav-link cr-343a40" href="/users/<%= req.user.id %>"><%= req.user.username %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link cr-343a40" href="/posts/new">Create</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link cr-343a40" href="/images/new">Settings</a>
