</nav>

<!-- Main Content -->
<div class="container pt-150 pb-150">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <h1 class="text-center mb-30">Edit profile</h1>
            <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
            <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
            <!-- To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
            <form name="sentMessage" id="contactForm" action="/users/<%= results[0].id %>?_method=PUT" method="post" enctype="multipart/form-data">
                <% if (errors.length > 0) { %>
                <% for(var i = 0; i < errors.length; i++) { %>
                <div class="alert alert-danger mb-30" role="alert">
                    <%= errors[i].msg %>
                </div>
                <% } %>
                <% } %>
                <div class="control-group mb-30">
                    <div class="form-group floating-label-form-group controls">
                        <input type="email" class="form-control" placeholder="Email address" name="email" value="<%if (inputs.length > 0) { %><%= inputs[0].email %><% }else{ %><%= results[0].email %><% } %>" required autofocus>
                    </div>
                </div>
                <div class="control-group mb-30">
                    <div class="form-group floating-label-form-group controls">
                        <input type="text" class="form-control" placeholder="Username" name="username" value="<%if (inputs.length > 0) { %><%= inputs[0].username %><% }else{ %><%= results[0].username %><% } %>" required>
                    </div>
                </div>
                <div class="control-group mb-30">
                    <div class="form-group floating-label-form-group controls">
                        <textarea class="form-control" placeholder="Description" name="description" rows="5" required><%if (inputs.length > 0) { %><%= inputs[0].description %><% }else{ %><%= results[0].description %><% } %></textarea>
                    </div>
                </div>
                <div class="control-group mb-30">
                    <div class="form-group floating-label-form-group controls">
                        <input type="file" class="form-control-file" name="file" accept="image/*" required>
                        <input type="hidden" name="imageurl" value="<%= results[0].imageurl %>">
                    </div>
                </div>
                <div class="form-group text-center mb-30">
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>

