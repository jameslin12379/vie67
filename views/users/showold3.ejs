<% include ../partials/header %>

<div id="et-main-area">
    <div id="main-content">
        <article id="post-209034" class="post-209034 page type-page status-publish hentry">
            <div class="entry-content">
                <div id="et-boc" class="et-boc">
                    <div class="et_builder_inner_content et_pb_gutters3">
                        <div class="et_pb_section et_pb_section_1 et_section_specialty">
                            <div class="et_pb_row">
                                <div class="et_pb_column et_pb_column_1_3 et_pb_column_3    et_pb_css_mix_blend_mode_passthrough et_pb_column_single w-100 ptb-0">
                                    <% if (alert.length > 0) { %>
                                    <div class="et_pb_newsletter_result et_pb_newsletter_error show text-center mb-1 fs-18">
                                        <%= alert %>
                                    </div>
                                    <% } %>
                                    <div class="et_pb_module et_pb_blurb et_pb_blurb_5 et_pb_bg_layout_light  et_pb_text_align_center  et_pb_blurb_position_top box-shadow-none pd-0 box-shadow-none" style="">
                                        <div class="et_pb_blurb_content">
                                            <div class="et_pb_main_blurb_image width-100 height-100"><img src="<%= results[0][0].imageurl %>" alt="" class="et-waypoint et_pb_animation_top et-animated width-100p height-100p"></div>

                                            <div class="et_pb_blurb_container">
                                                <h4 class="et_pb_module_header pb-14"><%= results[0][0].username %></h4>
                                                <div class="et_pb_blurb_description">
                                                    <p>Joined <%= moment(results[0][0].datecreated).format('LLL') %></p>
                                                    <div class="grid mza w-25 pb-14">
                                                        <a class="brown" href="/users/<%= results[0][0].id %>"><p><span id="postscount"><%= results[2][0].postscount %></span> Posts</p></a>
                                                        <a class="brown" href="/users/<%= results[0][0].id %>/following"><p><%= results[3][0].followingcount %> Following</p></a>
                                                    </div>
                                                    <div class="grid mza w-25 pb-14">
                                                        <a class="brown" href="/users/<%= results[0][0].id %>/comments"><p><%= results[4][0].commentscount %> Comments</p></a>
                                                        <a class="brown" href="/users/<%= results[0][0].id %>/upvotes"><p><%= results[5][0].upvotescount %> Likes</p></a>
                                                    </div>
                                                    <p class="mza w-60"><%= results[0][0].description %></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <% if (req.user === undefined) { %>
                                    <% } else if (req.user.id !== results[0][0].id) { %>
                                    <% } else { %>
                                    <div class="et_pb_button_module_wrapper et_pb_button_2_wrapper et_pb_button_alignment_center et_pb_module flex justify">
                                        <a class="submit-button mr-1" href="/users/<%= results[0][0].id %>/edit">Edit</a>
                                        <form action="/users/<%= results[0][0].id %>?_method=DELETE" method="post">
                                            <button type="submit" class="submit-button">Delete</button>
                                        </form>
                                    </div>
                                    <% } %>
                                </div>
                            </div>

                        </div>


                        <div class="et_pb_section et_pb_section_1 et_section_specialty pt-none">
                            <div class="et_pb_row" id="container">
                                <% for(var i=0; i < results[1].length; i++) { %>
                                <div class="et_pb_module et_pb_blurb et_pb_blurb_2 et_pb_bg_layout_light  et_pb_text_align_left  et_pb_blurb_position_left mb-30 box-shadow-none container-item" style="">
                                    <div class="et_pb_blurb_content">

                                        <div class="et_pb_blurb_container">
                                            <a href="/posts/<%= results[1][i].id %>"><h4 class="et_pb_module_header"><%= results[1][i].name %></h4></a>
                                            <div class="et_pb_blurb_description">
                                                <p><%= results[1][i].description %></p>
                                                <img class=" "src="<%= results[1][i].imageurl %>">
                                                <p><strong><%= moment(results[1][i].datecreated).format('LLL') %></strong></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>

                            </div>
                            <div id="loadMore">
                            </div>
                        </div>

                        </div>

                    </div>
                </div> </div>
        </article>
    </div>

</div>


<script src="/javascripts/userloadmoreposts.js"></script>

<% include ../partials/footer %>
